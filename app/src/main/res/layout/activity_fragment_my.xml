<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#D5DDE4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:text="我的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textColor="#000"
            android:text="张三"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/my_igv"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/my_tv_id"
            android:layout_below="@+id/my_igv"
            android:textColor="#000"
            android:text="工号:098765"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/my_igv"
            android:layout_toRightOf="@+id/my_tv_id"
            android:text="|"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:layout_below="@+id/my_igv"
            android:layout_toRightOf="@+id/my_tv_id"
            android:text="职位:研发工程师"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_tv_zw"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:text="部门:企业数据事业服务部"
            android:layout_below="@+id/my_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#BBBBBB"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/my_tv_zw"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>
    <Button
        android:background="#5AC2E7"
        android:layout_margin="10dp"
        android:text="注销"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>