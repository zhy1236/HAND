<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="355dp"
        android:layout_height="150dp">

        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/item_add_risk_type"
                android:layout_marginLeft="10dp"
                android:textColor="#666"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_add_risk_time"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="#666"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/item_add_risk_content"
            android:background="@color/white"
            android:enabled="false"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:textSize="14sp"
            android:lineSpacingExtra="4sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#333"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </TextView>

        <LinearLayout
            android:paddingRight="10dp"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp">

            <TextView
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_gravity="center_vertical"
                android:text="提出人:"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_add_risk_name"
                android:layout_gravity="center_vertical"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/item_add_risk_btn_Processing"
                android:textColor="#999"
                android:textSize="12sp"
                android:text="处理"
                android:background="@drawable/bg_999"
                android:layout_gravity="center_vertical"
                android:layout_width="62dp"
                android:layout_height="22dp" />

            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/item_add_risk_btn_change"
                android:textColor="#999"
                android:textSize="12sp"
                android:text="修改"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_999"
                android:layout_gravity="center_vertical"
                android:layout_width="62dp"
                android:layout_height="22dp" />

            <Button
                android:id="@+id/item_add_risk_btn_delete"
                android:textColor="#F13E2B"
                android:textSize="12sp"
                android:text="删除"
                android:background="@drawable/bg_f13e2b"
                android:layout_gravity="center_vertical"
                android:layout_width="62dp"
                android:layout_height="22dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>