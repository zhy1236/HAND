<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F4F4F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:text="日报"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:background="#08DDDDDD"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/journal_receiver"
            android:layout_margin="0.2dp"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/journal_iv_received"
                android:layout_marginTop="12dp"
                android:background="@mipmap/ic_receiver"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:layout_margin="8dp"
                android:textColor="#4C5E70"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:text="收到日报"
                android:layout_below="@+id/journal_iv_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_journal_tv_received_num"
                android:gravity="center"
                android:background="@drawable/btn_bg_num"
                android:visibility="gone"
                android:textColor="#fff"
                android:layout_marginRight="-7dp"
                android:textSize="10sp"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="3dp"
                android:minHeight="12dp"
                android:minWidth="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/journal_iv_received"
                android:layout_alignTop="@+id/journal_iv_received" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="0.2dp"
            android:background="#fff"
            android:id="@+id/journal_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/journal_iv_new"
                android:layout_marginTop="12dp"
                android:background="@mipmap/ic_new_journal"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:layout_margin="8dp"
                android:textColor="#4C5E70"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="写日报"
                android:layout_below="@+id/journal_iv_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="0.2dp"
            android:background="#fff"
            android:id="@+id/journal_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/journal_iv_send"
                android:layout_marginTop="12dp"
                android:background="@mipmap/ic_sended_journal"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:layout_margin="8dp"
                android:textColor="#4C5E70"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:text="已发送日报"
                android:layout_below="@+id/journal_iv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_journal_tv_send_num"
                android:gravity="center"
                android:background="@drawable/journal_item"
                android:textColor="#fff"
                android:visibility="gone"
                android:layout_marginRight="-7dp"
                android:textSize="10sp"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="3dp"
                android:minHeight="12dp"
                android:minWidth="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/journal_iv_send"
                android:layout_alignRight="@+id/journal_iv_send" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="0.2dp"
            android:background="#fff"
            android:id="@+id/journal_defect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/journal_iv_defect"
                android:layout_marginTop="12dp"
                android:background="@mipmap/ic_defect"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="#4C5E70"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:text="未提交人员"
                android:layout_below="@+id/journal_iv_defect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_journal_tv_defect_num"
                android:gravity="center"
                android:background="@drawable/journal_item"
                android:textColor="#fff"
                android:visibility="gone"
                android:layout_marginRight="-7dp"
                android:textSize="10sp"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="3dp"
                android:minHeight="12dp"
                android:minWidth="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/journal_iv_defect"
                android:layout_alignRight="@+id/journal_iv_defect" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#08DDDDDD"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="0.2dp"
            android:layout_marginLeft="0.2dp"
            android:layout_marginRight="0.2dp"
            android:background="#fff"
            android:id="@+id/journal_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/journal_iv_comment"
                android:layout_marginTop="12dp"
                android:background="@mipmap/ic_comment"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:gravity="center"
                android:layout_margin="7dp"
                android:textSize="13sp"
                android:textColor="#4C5E70"
                android:layout_centerHorizontal="true"
                android:text="评论"
                android:layout_below="@+id/journal_iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_journal_tv_comment_num"
                android:gravity="center"
                android:background="@drawable/journal_item"
                android:textColor="#fff"
                android:visibility="gone"
                android:layout_marginRight="-7dp"
                android:textSize="10sp"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="3dp"
                android:minHeight="12dp"
                android:minWidth="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/journal_iv_comment"
                android:layout_alignRight="@+id/journal_iv_comment" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="0.2dp"
            android:layout_marginLeft="0.2dp"
            android:layout_marginRight="0.2dp"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:gravity="center"
                android:layout_margin="7dp"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="0.2dp"
            android:layout_marginLeft="0.2dp"
            android:layout_marginRight="0.2dp"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:gravity="center"
                android:layout_margin="7dp"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="0.2dp"
            android:layout_marginLeft="0.2dp"
            android:layout_marginRight="0.2dp"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:gravity="center"
                android:layout_margin="7dp"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>