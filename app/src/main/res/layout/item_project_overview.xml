<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/item_project_overview_iv"
            android:src="@mipmap/ic_project_yili"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:text="伊利智能BI平台"
            android:layout_centerVertical="true"
            android:id="@+id/item_project_overview_name"
            android:layout_toRightOf="@+id/item_project_overview_iv"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="34dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_project_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:text="实现阶段"
            android:textSize="13sp"
            android:textColor="#999999"
            android:id="@+id/item_project_overview_pg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/item_project_overview_btn"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ccc"
            android:textColor="#999"
            android:textSize="13sp"
            android:text="概览"
            android:layout_width="63dp"
            android:layout_height="23dp" />
    </LinearLayout>

</LinearLayout>