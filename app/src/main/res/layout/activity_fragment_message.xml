<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#D5DDE4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:text="消息(5)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/message_tv_rbhz"
                    android:textColor="#000"
                    android:text="日报汇总"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/message_tv_data"
                    android:text="13:14"
                    android:textColor="#D6D1C7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/message_tv_content"
                    android:textColor="#D6D1C7"
                    android:text="[日报]:张三的日报"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="#f00"
                    android:layout_alignParentRight="true"
                    android:text="3"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </LinearLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:background="#c9c9c9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/message_tv_rbpl"
                    android:textColor="#000"
                    android:text="日报评论"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/message_tv_time"
                    android:text="13:14"
                    android:textColor="#D6D1C7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/message_tv_rbpl"
                    android:id="@+id/message_tv_pl"
                    android:textColor="#D6D1C7"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="[日报]:李四对张三4月10日提交的日报进行了评论，评论内容如下"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:background="#f00"
                    android:layout_alignParentRight="true"
                    android:text="2"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:background="#c9c9c9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>