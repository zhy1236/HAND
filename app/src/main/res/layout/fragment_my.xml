<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/my_igv"
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_igv"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_hand"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/my_tv_id"
                android:layout_below="@+id/my_igv"
                android:textColor="#000"
                android:text="工号:098765"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_below="@+id/my_igv"
                android:layout_toRightOf="@+id/my_tv_id"
                android:text="|"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="10dp"
                android:layout_below="@+id/my_igv"
                android:layout_toRightOf="@+id/my_tv_id"
                android:text="职位:研发工程师"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_tv_zw"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:text="部门:企业数据事业服务部"
                android:layout_below="@+id/my_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="#BBBBBB"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/my_tv_zw"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
        </RelativeLayout>

        <Button
            android:drawableRight="@mipmap/ic_icon"
            android:gravity="left|center_vertical"
            android:text="账号与安全"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:drawableRight="@mipmap/ic_icon"
            android:gravity="left|center_vertical"
            android:text="密码修改"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:drawableRight="@mipmap/ic_icon"
            android:gravity="left|center_vertical"
            android:text="我的关注"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:drawableRight="@mipmap/ic_icon"
            android:gravity="left|center_vertical"
            android:text="帮助与反馈"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:drawableRight="@mipmap/ic_icon"
            android:gravity="left|center_vertical"
            android:text="关于"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="20dp"
            android:background="#5AC2E7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="注销"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>