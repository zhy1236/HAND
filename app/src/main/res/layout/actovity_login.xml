<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/ic_login"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_iv"
        android:layout_marginTop="157dp"

        android:background="@mipmap/ic_login_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/login_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:layout_marginBottom="32dp"
        android:layout_width="104dp"
        android:layout_height="104dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_oval"
            android:layout_width="104dp"
            android:layout_height="104dp" />


        <ImageView
            android:src="@drawable/login_oval_min"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="85dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_below="@+id/login_rl"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#52ffffff"
            android:layout_width="230dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/login_en_username"
                android:background="#00ffffff"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:hint="用户名"
                android:lines="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="#00ffffff"
                android:text="X"
                android:textColor="#f00"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2.5dp"
            android:background="#52ffffff"
            android:layout_width="230dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/login__ed_password"
                android:background="#00ffffff"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:password="true"
                android:hint="密码"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <CheckBox
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="13sp"
            android:id="@+id/login_cb_savepassword"
            android:button="@drawable/login_btn_check"
            android:text=" 记住密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/login_btn_login"
            android:textColor="@color/selector_textcolor"
            android:background="@drawable/selector_bg_login_button"
            android:textSize="15sp"
            android:enabled="false"
            android:text="登陆"
            android:layout_width="230dp"
            android:layout_height="40dp" />
    </LinearLayout>

</RelativeLayout>