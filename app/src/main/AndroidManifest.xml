<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hand.mockingbot">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_hand_management"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".avtivity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:launchMode="singleInstance">

        </activity>
        <activity android:name=".avtivity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".avtivity.ReceivedJournalAtivity"/>
        <activity android:name=".avtivity.NewJournalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".avtivity.SendJournalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".avtivity.DefectJournalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".avtivity.CommentJournalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".avtivity.LookUpJournalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".avtivity.MyCollectionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".avtivity.ActionSheetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyDialogStyleBottom"/>
        <meta-data
            android:name="PGYER_APPID"
            android:value="02998d3e1e105cc45f06dca8b801b50f" >
        </meta-data>
    </application>

</manifest>